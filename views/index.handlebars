<div class="container">
     <div class="row">
          <div class="col-xs-12">
               <div class="text-center">
                    <img id="burgerPic" src="/assets/img/burger.png">
               </div>
          </div>
     </div>
</div>

<div class="container">
     <div class="row">
          <div class="col-sm-4 col-xs-12">
               <h2>Burgers On the Menu</h2>
               <ul>
                 {{#each burgers}}
                   {{#unless this.devoured}}
                     <li class="text-center">
                       {{this.burger_name}}
                       <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                         <button class="btn btn-primary btn-block" type="submit">Devour Burger!</button>
                       </form>
                     </li>
                   {{/unless}}
                 {{/each}}
               </ul>
          </div>
          <div class="col-sm-4 col-xs-12">
               <h2>Add a Burger</h2>
               <form class="create-update-form" action="burgers/create" method="POST">

                 <div class="form-group">
                   <label for="ca">Burger Name:</label>
                   <input type="text" id="ca" name="name">
                 </div>

                 <button class="btn btn-primary btn-block" type="submit">Add Burger</button>
               </form>
          </div>
          <div class="col-sm-4 col-xs-12">
               <h2>Devoured Burgers</h2>
               <ul>
                 {{#each burgers}}
                   {{#if this.devoured}}
                     <li class="text-center">
                       {{this.burger_name}}
                       <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
                         <button class="btn btn-primary btn-block" type="submit">Delete Burger!</button>
                       </form>
                     </li>
                   {{/if}}
                 {{/each}}
               </ul>
          </div>
